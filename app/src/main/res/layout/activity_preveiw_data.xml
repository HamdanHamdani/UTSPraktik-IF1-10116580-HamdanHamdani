<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreveiwData">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <View
                android:id="@+id/view2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/vector" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Cek Kembali Isian Data"
                android:textColor="#424242"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="NIK"
                android:textColor="#424242"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="7323456778941234"
                android:textColorHint="#424242"
                android:paddingBottom="16dp"
                android:id="@+id/editTextNik"
                android:background="@drawable/edit_text_background"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textViewNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Nama"
                android:textColor="#424242"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hamdan Hamdani"
                android:textColorHint="#424242"
                android:paddingBottom="16dp"
                android:id="@+id/editTextNama"
                android:background="@drawable/edit_text_background"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textViewTglLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Tanggal Lahir"
                android:textColor="#424242"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2 November 1999"
                android:textColorHint="#424242"
                android:paddingBottom="16dp"
                android:id="@+id/editTextTanggal"
                android:background="@drawable/edit_text_background"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textViewJenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Jenis Kelamin"
                android:textColor="#424242"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Laki Laki"
                android:textColorHint="#424242"
                android:paddingBottom="16dp"
                android:id="@+id/editTextJenisKelamin"
                android:background="@drawable/edit_text_background"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/textViewHubungan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Hubungan dengan anda"
                android:textColor="#424242"
                android:textSize="12sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Orang tua"
                android:textColorHint="#424242"
                android:paddingBottom="16dp"
                android:id="@+id/editTextHubungan"
                android:background="@drawable/edit_text_background"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="272dp">

                <Button
                    android:id="@+id/buttonSimpan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/buttonUbah"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/btn_simpan"
                    android:text="Simpan" />

                <Button
                    android:id="@+id/buttonUbah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="27dp"
                    android:background="@drawable/btn_ubah"
                    android:text="Ubah" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>